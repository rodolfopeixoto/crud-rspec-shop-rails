<% if @customer.errors.any? %>
  <% @customer.errors.full_messages.each do |message| %>
    <li>
      <%= message %>
    </li>
  <% end %>
<% end %>

<h1>New Client</h1>

<%= form_for @customer do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :email %>
  <%= form.text_field :email %>

  <%= form.label :phone %>
  <%= form.text_field :phone %>

  <%= form.label :avatar %>
  <%= form.file_field :avatar %>

  <%= form.label :smoker %><br />
  <% { 'Y': 'Yes', 'N': 'No' }.each do |key, value| %>
    <%= form.radio_button :smoker, key %> <%= value %> <br />
  <% end %>

  <%= form.submit 'Create Client' %>
<% end %>